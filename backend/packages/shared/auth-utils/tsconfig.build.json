{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./build",
    "target": "ESNext",
    "module": "CommonJS",
    "lib": [
      "DOM",
      "ES5"
    ],
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "src/tests/*",
    "build"
  ]
}
