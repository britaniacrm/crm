{
  "packages": [
    "packages/configs/*",
    "packages/backend/*",
    "packages/backend/shared/*",
    "packages/frontend/*",
    "packages/frontend/doc/*",
    "packages/frontend/core/*",
    "packages/frontend/web/*",
    "packages/frontend/web/apps/*",
    "packages/frontend/packages/core/*",
    "packages/frontend/packages/web/*",
    "packages/frontend/packages/web/apps/*"
  ],
  "version": "0.0.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "allowBranch": [
        "develop",
        "master",
        "release-*"
      ],
      "message": "chore(release): Publish"
    },
    "publish": {
      "conventionalCommits": true
    }
  }
}
