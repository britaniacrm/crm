{
  "overrides": [
    {
      "files": [
        "*/*.mdx"
      ],
      "extends": [
        "plugin:mdx/recommended"
      ],
      "parserOptions": {
        "parser": "babel-eslint"
      },
      "rules": {
        "react/jsx-indent": "off",
        "eslint key-spacing": [2, { "beforeColon": true, "afterColon": true }]
      }
    }
  ]
}